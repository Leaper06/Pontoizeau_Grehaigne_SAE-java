<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/wifi_ok"
        android:layout_width="32dp" android:layout_height="32dp"
        android:layout_margin="16dp" android:src="@drawable/wifi_ok"
        app:layout_constraintStart_toStartOf="parent" app:layout_top_toTopOf="parent" />

    <TextView android:id="@+id/main_title"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Statut des services" android:textColor="@color/white" android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/wifi_ok"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_top_toTopOf="@id/wifi_ok" />

    <ImageView android:id="@+id/btn_refresh"
        android:layout_width="32dp" android:layout_height="32dp"
        android:layout_margin="16dp" android:src="@android:drawable/ic_menu_rotate"
        app:layout_constraintEnd_toEndOf="parent" app:layout_top_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_services"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_top_toBottomOf="@id/main_title" />

</androidx.constraintlayout.widget.ConstraintLayout>